<Window x:Class="Q2C.Viewer.WindowAbout.WindowAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2C.Viewer.WindowAbout"
        mc:Ignorable="d"
        Title="Q2C" Icon="/icons/q2c_icon.png" Height="420" Width="340" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <GroupBox Margin="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">

                    <TextBlock FontWeight="Bold">About</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="14"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Margin="10,15,10,0" Width="40" Source="/icons/q2c_icon.png" VerticalAlignment="Top" Grid.RowSpan="12"/>

                <TextBlock Margin="0,0,0,0" Grid.Column="1" Grid.Row="1" Grid.RowSpan="10" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left">Q2C</TextBlock>
                <TextBlock x:Name="Q2CVersion" Margin="0,5,0,0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" FontSize="12" HorizontalAlignment="Left">Version</TextBlock>

                <TextBlock Grid.Column="0" Margin="0,6,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="4" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center">Developed by:</TextBlock>
                <TextBlock x:Name="diogo_mail" Grid.Column="1" Margin="0,2,0,0" Grid.Row="6" Grid.RowSpan="2" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">???</TextBlock>
                <TextBlock Grid.Column="1" Margin="0,2,0,0" Grid.Row="7" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">Max Ruwolt</TextBlock>
                <TextBlock Grid.Column="1" Margin="0,2,0,0" Grid.Row="8" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">Marlon Dias Mariano dos Santos</TextBlock>
                <TextBlock Grid.Column="1" Margin="0,2,0,0" Grid.Row="9" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">Ke Pu</TextBlock>
                <TextBlock Grid.Column="1" Margin="0,2,0,0" Grid.Row="10" Grid.RowSpan="2" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">Fan Liu</TextBlock>
                <TextBlock Grid.Column="1" Margin="0,2,0,0" Grid.Row="11" Grid.ColumnSpan="3" FontSize="10" HorizontalAlignment="Left">Paulo Costa Carvalho</TextBlock>
                <TextBlock x:Name="CitationText" Grid.Column="0" Margin="0,0,0,0" Grid.Row="13" Grid.ColumnSpan="4" FontSize="10" HorizontalAlignment="Left">All rights reserved®.</TextBlock>
                <TextBlock Grid.Column="0" Margin="0,0,0,0" Grid.Row="14" Grid.ColumnSpan="4" FontSize="10" HorizontalAlignment="Left">This product is licensed to:</TextBlock>
                <GroupBox Grid.Column="0" Margin="0,0,0,0" Grid.Row="15" Grid.ColumnSpan="4" Grid.RowSpan="6">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="user_groupbox_img" Margin="0,0,3,0" Width="10" Source="/icons/samples_control.jpg" />
                            <TextBlock FontWeight="Bold" FontSize="10"></TextBlock>
                        </StackPanel>
                    </GroupBox.Header>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="12"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">User:</TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">Platform OS:</TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">Version:</TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">Machine Name:</TextBlock>
                        <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">Processor:</TextBlock>
                        <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" HorizontalAlignment="Left">Installed Memory:</TextBlock>

                        <TextBlock x:Name="usrLabel" Grid.Row="0" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>
                        <TextBlock x:Name="osNameLabel" Grid.Row="1" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>
                        <TextBlock x:Name="versionOSLabel" Grid.Row="2" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>
                        <TextBlock x:Name="machineNameLabel" Grid.Row="3" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>
                        <TextBlock x:Name="processorNameLabel" Grid.Row="4" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>
                        <TextBlock x:Name="RAMmemoryLabel" Grid.Row="5" Grid.Column="1" Margin="0,0,0,0" Grid.ColumnSpan="4" FontSize="9" FontStyle="Italic" HorizontalAlignment="Left">?</TextBlock>

                    </Grid>
                </GroupBox>

                <TextBlock Grid.Column="0" Margin="0,2,0,0" Grid.Row="21" Grid.ColumnSpan="4" FontSize="6.5" HorizontalAlignment="Left">RawFileReader reading tool. Copyright © 2016 by Thermo Fisher Scientific, Inc. All rights reserved.</TextBlock>
                <Button x:Name="ButtonResetSettings"
                    Click="ButtonResetSettings_Click"
                    Margin="5"
                    Grid.Column="0"
                    Grid.Row="22"
                    Grid.ColumnSpan="4"
                    Grid.RowSpan="2"
                    Padding="10,1,10,1" 
                    Height="20"
                    HorizontalAlignment="Center" 
                    Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <DockPanel>
                            <Image x:Name="ok_btn_img" Source="/icons/update.png"/>
                        </DockPanel>
                        <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="75">Reset Settings</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </GroupBox>
        <Line  Margin="0,0,0,0" HorizontalAlignment="Center" X1="0" Y1="210"  X2="250" Y2="210" StrokeThickness="0.5" Stroke="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" />
    </Grid>
</Window>
