<UserControl x:Class="Q2C.Viewer.Project.UCProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer"
             mc:Ignorable="d" 
             d:Width="450" d:Height="305">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="header_groupbox_img" Margin="3,0" Width="15" Source="/icons/sample_icon.png" />
                    <TextBlock FontWeight="Bold">Parameters</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="269.087"/>
                    <ColumnDefinition Width="609.803"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Project name:"
                           Margin="5,5,5,5"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBox Grid.Column="1"
                           Grid.Row="0"
                           x:Name="TextUserInitials"
                           Height="23"
                           Margin="5,5,5,5"
                           ToolTip="Type an identification for the project"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type an identification for the project"/>

                <TextBlock Text="Amount of MS time (hours):"
                           Grid.Row="1"
                           Margin="5,5,5,5"/>
                <TextBlock Text="???"
                           Grid.Row="1"
                           Grid.Column="1"
                           x:Name="TextAmountMSTime"
                           Margin="5,5,5,5"/>

                <TextBlock Text="Number of Samples:"
                           Grid.Row="2"
                           Margin="5,5,5,5"/>
                <TextBox Grid.Column="1"
                           Grid.Row="2"
                           x:Name="TextNumberOfSamples"
                           Height="23"
                           Margin="5,5,5,5"
                           ToolTip="Type the amount of samples. Separate amounts with '/'."
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type the amount of samples"
                           PreviewTextInput="TextNumberOfSamples_PreviewTextInput" 
                           TextChanged="TextNumberOfSamples_TextChanged"
                           />

                <TextBlock Text="Method:"
                           Grid.Row="3"
                           Margin="5,5,5,5"/>
                <ComboBox Grid.Column="1"
                          Margin="5,5,5,5"
                          Grid.Row="3"
                          Width="225"
                          HorizontalAlignment="Left"
                          x:Name="ComboMethod" SelectionChanged="ComboMethod_SelectionChanged"
                          />
                <Button
                    x:Name="ButtonMethod"
                    Click="ButtonMethod_Click"
                    Grid.Row="3"
                    Grid.Column="1"
                    Padding="5,1,0,0"
                    Margin="235,5,5,5"
                    Height="20"
                    HorizontalAlignment="Left" 
                    Cursor="Hand"
                    Visibility="Visible">
                    <StackPanel Orientation="Horizontal">
                        <DockPanel>
                            <Image Source="/icons/add_icon.png" />
                        </DockPanel>
                        <TextBlock Margin="5,0,0,0" Width="1"></TextBlock>
                    </StackPanel>
                </Button>

                <TextBlock Text="Machine:"
                           Grid.Row="4"
                           Margin="5,5,5,5"/>
                <ComboBox Grid.Column="1"
                          Height="23"
                  Margin="5,5,5,5"
                  Grid.Row="4"
                  x:Name="ComboMachines"
                  IsEditable="True"
                  IsReadOnly="True"
                  SelectionChanged="ComboMachines_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Click="CheckBoxMachine_Click" Content="{Binding Name}" IsChecked="{Binding IsChecked}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <StackPanel Grid.Row="5"
                            Grid.ColumnSpan="2"
                            x:Name="MachinesFAIMS"/>

                <TextBlock Text="Status:"
                           Grid.Row="6"
                           Margin="5,5,5,5"/>
                <ComboBox Grid.Column="1"
                          Margin="5,5,5,5"
                          Height="23"
                          Grid.Row="6"
                          x:Name="ComboStatus">
                    <ComboBoxItem IsSelected="True">Wait for acquisition</ComboBoxItem>
                    <ComboBoxItem>In Progress</ComboBoxItem>
                    <ComboBoxItem>Measured</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Comments:"
                           Grid.Row="7"
                           Margin="5,5,5,5"/>
                <TextBox Grid.Column="1"
                           Grid.Row="7"
                           x:Name="TextComments"
                           Height="23"
                           Margin="5,5,5,5"
                           ToolTip="Type any comments (optional)"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type any comments (optional)"/>
                <CheckBox x:Name="ReceiveNotification"
                          IsChecked="True"
                          Content="Receive notification(s) by e-mail"
                          Grid.Row="8"
                          Grid.ColumnSpan="2"
                          Margin="5,10,5,5"/>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="3" Margin="5"  Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonConfirm"
                Click="ButtonConfirm_Click"
                Grid.Column="1"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                    </DockPanel>
                    <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="ButtonCancel"
                Click="ButtonCancel_Click"
                Grid.Column="2"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="cancel_btn_img" Source="/icons/cancel_icon.png" />
                    </DockPanel>
                    <TextBlock x:Name="cancel_btn_text" Margin="0,0,0,0" Width="45">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
