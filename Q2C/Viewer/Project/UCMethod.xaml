<UserControl x:Class="Q2C.Viewer.Project.UCMethod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Q2C.Viewer.Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MethodGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Margin="0,0,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <TextBlock FontWeight="Bold">Parameters</TextBlock>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition MinWidth="175" Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Quantification:"
                           Margin="5,5,5,5"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <ComboBox Grid.Column="1"
                          Grid.Row="0"
                          Margin="5,5,5,5"
                          Width="225"
                          HorizontalAlignment="Left"
                          x:Name="ComboQuantification">
                    <ComboBoxItem IsSelected="True">None</ComboBoxItem>
                    <ComboBoxItem>LFQ</ComboBoxItem>
                    <ComboBoxItem>TMT</ComboBoxItem>
                    <ComboBoxItem>iTRAQ</ComboBoxItem>
                    <ComboBoxItem>SILAC</ComboBoxItem>
                    <ComboBoxItem>Customized</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Comment:"
                           Margin="5,5,5,5"
                           Grid.Column="0"
                           Grid.Row="1"/>
                <TextBox Grid.Column="1"
                           Grid.Row="1"
                           x:Name="TextComment"
                           Margin="5,5,5,5"
                           ToolTip="Type a comment"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type a comment"/>

                <TextBlock Text="Purpose / Modification:"
                           Margin="5,5,5,5"
                           Grid.Column="2"
                           Grid.Row="0"/>
                <ComboBox Grid.Column="3"
                          Grid.Row="0"
                          Margin="5,5,5,5"
                          Width="225"
                          HorizontalAlignment="Left"
                          x:Name="ComboPurpose">
                            <ComboBoxItem IsSelected="True">None</ComboBoxItem>
                            <ComboBoxItem>BS3</ComboBoxItem>
                            <ComboBoxItem>DSS</ComboBoxItem>
                            <ComboBoxItem>DSSO</ComboBoxItem>
                            <ComboBoxItem>SDA</ComboBoxItem>
                            <ComboBoxItem>PhoX</ComboBoxItem>
                            <ComboBoxItem>Phospho</ComboBoxItem>
                            <ComboBoxItem>DSBSO</ComboBoxItem>
                            <ComboBoxItem>DSBU</ComboBoxItem>
                            <ComboBoxItem>ProteinID</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Gradient length (min):"
                           Margin="5,5,5,5"
                           Grid.Column="2"
                           Grid.Row="1"/>
                <ComboBox Grid.Column="3"
                          Grid.Row="1"
                          Margin="5,5,5,5"
                          Width="225"
                          HorizontalAlignment="Left"
                          x:Name="ComboGradient"
                          SelectionChanged="ComboGradient_SelectionChanged">
                    <ComboBoxItem IsSelected="True">0</ComboBoxItem>
                    <ComboBoxItem>60</ComboBoxItem>
                    <ComboBoxItem>80</ComboBoxItem>
                    <ComboBoxItem>120</ComboBoxItem>
                    <ComboBoxItem>180</ComboBoxItem>
                    <ComboBoxItem>Custom</ComboBoxItem>
                </ComboBox>
                <xctk:IntegerUpDown
                            x:Name="UpDownCustomGradient"
                            Margin="5"
                            MinWidth="50"
                            Height="23"
                            Minimum="1"
                            Value="1"
                            Grid.Column="3"
                            Grid.Row="2"
                            ToolTip="Set a gradient length"
                            Visibility="Collapsed"/>

                <Button x:Name="ButtonConfirm"
                        Click="ButtonConfirm_Click"
                        Margin="5"
                        Grid.Column="0"
                        Grid.Row="2"
                        Padding="10,1,10,1" 
                        Height="20"
                        HorizontalAlignment="Center" 
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <DockPanel>
                            <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                        </DockPanel>
                        <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Margin="0,10,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <TextBlock FontWeight="Bold">All Methods</TextBlock>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="DataGridMethods"
                          Grid.Column="0"
                                    AutoGenerateColumns="False"
                                    AlternatingRowBackground="WhiteSmoke"
                                    LoadingRow="DataGridMethods_LoadingRow"
                                    PreviewKeyDown="DataGridMethods_PreviewKeyDown"
                                    VerticalScrollBarVisibility="Visible"
                                    SelectionMode="Single"
                                    MaxHeight="185" SelectionChanged="DataGridMethods_SelectionChanged">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                        Header="Name"
                        Binding="{Binding Name}"
                        IsReadOnly="True"
                        CanUserSort="False"
                            Width="600">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal" Grid.Row="2">
            <Button x:Name="ButtonExport"
                        Click="ButtonSave_Click"
                        Padding="5,1,5,1"
                        Margin="0,0,5,0"
                        Height="20"
                        HorizontalAlignment="Center" 
                        Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="export_btn_img" Source="/icons/export.png" />
                    </DockPanel>
                    <TextBlock x:Name="exoort_btn_text" Margin="5,0,0,0" Width="35">Export</TextBlock>
                </StackPanel>
            </Button>
            <Button x:Name="ButtonLoad"
                        Click="ButtonLoad_Click"
                        Padding="5,1,5,1"
                        Margin="0,0,5,0"
                        Height="20"
                        HorizontalAlignment="Center" 
                        Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="load_btn_img" Source="/icons/load.png" />
                    </DockPanel>
                    <TextBlock x:Name="load_btn_text" Margin="5,0,0,0" Width="25">Load</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
