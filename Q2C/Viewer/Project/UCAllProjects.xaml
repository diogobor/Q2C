<UserControl x:Class="Q2C.Viewer.Project.UCAllProjects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer.Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="all_projects_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header=""
                                  Margin="0,0,0,10"
                                  Grid.Column="0">
                <Button
                                Click="Button_AddUpdateProject"
                                Padding="5,1,5,1"
                                Margin="5,5,5,5"
                                Height="20"
                                HorizontalAlignment="Left" 
                                Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <DockPanel>
                            <Image Source="/icons/add_icon.png" />
                        </DockPanel>
                        <TextBlock Margin="5,0,0,0" Width="70">Add Project</TextBlock>
                    </StackPanel>
                </Button>
            </GroupBox>
            <GroupBox
                                  Margin="0,0,0,10"
                                  Grid.Column="1">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image x:Name="header_groupbox_img" Width="15" Margin="3,0" Source="/icons/queue.png" />
                        <TextBlock FontWeight="Bold">Filter</TextBlock>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel Margin="1" Orientation="Horizontal">
                    <TextBlock Text="Status:"
                                   Margin="5,5,5,5"/>
                    <ComboBox
                                  Margin="5,5,5,5"
                                  Height="23"
                                  MinWidth="120"
                                  x:Name="ComboStatus"
                                  IsEditable="True"
                                  IsReadOnly="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Click="CheckBoxStatus_Click" Content="{Binding Name}" IsChecked="{Binding IsChecked}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="User:"
                                   Margin="5,5,5,5"/>
                    <ComboBox
                                  Margin="5,5,5,5"
                                  Height="23"
                                  MinWidth="120"
                                  x:Name="ComboUsers"
                                  IsEditable="True"
                                  IsReadOnly="True">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Click="CheckBoxUsers_Click" Content="{Binding Name}" IsChecked="{Binding IsChecked}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button
                                Click="Button_FilterProject"
                                Padding="5,1,5,1"
                                Margin="5,5,5,5"
                                Height="20"
                                HorizontalAlignment="Left" 
                                Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <DockPanel>
                                <Image Source="/icons/filter.png" />
                            </DockPanel>
                            <TextBlock Margin="0,0,0,0" Width="0"></TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </GroupBox>
        </Grid>
        <DataGrid
                        Grid.Row="2"
                        x:Name="DataGridProjects"
                        AutoGenerateColumns="False"
                        AlternatingRowBackground="WhiteSmoke"
                        LoadingRow="DataGridProjects_LoadingRow"
                        PreviewKeyDown="DataGridProjects_PreviewKeyDown"
                        MouseDoubleClick="DataGridProjects_MouseDoubleClick"
                        VerticalScrollBarVisibility="Visible"
                        SelectionMode="Single"
                        MinHeight="310">
            <DataGrid.ContextMenu>
                <ContextMenu x:Name="ContextMenuQueue" Visibility="Hidden">
                    <MenuItem Header="Add to machine queue" Click="MenuItem_Click">
                        <MenuItem.Icon>
                            <Image Source="../../icons/queue.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn
                                Header="Registration Date"
                                Binding="{Binding RegistrationDateStr}"
                                MaxWidth="155"
                                MinWidth="150"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Project name"
                                Binding="{Binding ProjectName}"
                                MinWidth="250"
                                MaxWidth="300"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Amount of MS time (hours)"
                                Binding="{Binding AmountMS}"
                                MinWidth="155"
                                MaxWidth="155"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Number of Samples"
                                Binding="{Binding NumberOfSamples}"
                                MinWidth="120"
                                MaxWidth="120"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Method"
                                Binding="{Binding Method}"
                                MinWidth="200"
                                MaxWidth="300"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Machine"
                                Binding="{Binding Machine}"
                                MinWidth="170"
                                MaxWidth="170"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="FAIMS"
                                Binding="{Binding _faims}"
                                MinWidth="150"
                                MaxWidth="200"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Receive Notification"
                                Binding="{Binding _receiveNotification}"
                                MinWidth="150"
                                MaxWidth="200"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Added by"
                                Binding="{Binding AddedBy}"
                                MinWidth="120"
                                MaxWidth="120"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                            Header="Status"
                            Binding="{Binding _status}"
                            MinWidth="120"
                            MaxWidth="120"
                            IsReadOnly="True"
                            CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                            Header="Estimated waiting time (hours)"
                            Binding="{Binding EstimatedWaitingTime}"
                            MinWidth="180"
                            IsReadOnly="True"
                            CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn
                                Header="Comments"
                                Binding="{Binding Comments}"
                                MinWidth="150"
                                IsReadOnly="True"
                                CanUserSort="False">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
