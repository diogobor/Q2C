<UserControl x:Class="Q2C.Viewer.Setup.UCDatabase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer.Setup"
             mc:Ignorable="d" 
             d:DesignHeight="350" Height="350" d:DesignWidth="365">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainUCDatabase">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Grid.Row="0">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="header_groupbox_img" Margin="3,0" Width="15" Source="/icons/db_icon.png" />
                    <TextBlock FontWeight="Bold">Parameters</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <GroupBox Margin="5" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="106.803"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:Name="CheckBoxOfflineMode"
                              Grid.Row="0"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Margin="5,5,0,5"
                              Content="Offline Mode"
                              IsChecked="False"
                              Click="CheckBoxOfflineMode_Click"/>
                        <TextBlock Text="Google Client ID:"
                               Margin="5,5,5,5"
                               Grid.Column="0"
                               Grid.Row="1" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="TextGoogleClientID"
                             Grid.Row="1"
                             Grid.Column="2"
                             Margin="10,5,5,5" 
                             Height="23"
                             ToolTip="Type the Google Client ID"
                             Style="{StaticResource MyWaterMarkStyle}"
                             Tag="Type the Google Client ID"/>

                        <TextBlock Grid.Column="0" 
                               Grid.Row="2" 
                               Margin="5,5,5,5" 
                               Text="Google Client Secret:" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="TextGoogleClientSecret"
                             Grid.Row="2"
                             Grid.Column="2"
                             Margin="10,5,5,5" 
                             Height="23"
                             ToolTip="Type the Google Client Secret"
                             Style="{StaticResource MyWaterMarkStyle}"
                             Tag="Type the Google Client Secret"/>

                        <TextBlock Grid.Column="0" 
                               Grid.Row="3" 
                               Margin="5,5,5,5" 
                               Text="Spreadsheet ID:" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="TextSpreadSheetID"
                             Grid.Row="3"
                             Grid.Column="2"
                             Margin="10,5,5,5" 
                             Height="23"
                             IsEnabled="False"
                             ToolTip="Type the Spreadsheet ID"
                             Style="{StaticResource MyWaterMarkStyle}"
                             Tag="Type the Spreadsheet ID"/>
                        <CheckBox x:Name="CheckBoxNewSpreadsheet"
                              Grid.Row="4"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Margin="5,5,0,5"
                              Content="Create spreadsheet"
                              IsChecked="True"
                              Click="CheckBoxNewSpreadSheet_Click"/>
                    </Grid>
                </GroupBox>
                <GroupBox Margin="5" Padding="0,2,0,0" Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            Margin="5,5,5,5"
                            Text="Fasta"/>
                        <ComboBox Grid.Column="1"
                              Margin="5,5,5,5"
                              Width="230"
                              HorizontalAlignment="Left"
                              x:Name="ComboFasta" SelectionChanged="ComboFasta_SelectionChanged"
                              />
                        <Button
                            x:Name="ButtonAddFasta"
                            Click="ButtonAddFasta_Click"
                            Grid.Row="3"
                            Grid.Column="1"
                            Padding="5,1,0,0"
                            Margin="5,5,5,5"
                            Height="20"
                            HorizontalAlignment="Left" 
                            Cursor="Hand"
                            Visibility="Visible">
                            <StackPanel Orientation="Horizontal">
                                <DockPanel>
                                    <Image Source="/icons/add_icon.png" />
                                </DockPanel>
                                <TextBlock Margin="5,0,0,0" Width="1"></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>
                <GroupBox Margin="5" Padding="0,2,0,0" Grid.Row="2">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ButtonExport"
                            Click="ButtonExportSpreadsheet_Click"
                            Padding="5,1,5,1"
                            Margin="5"
                            Height="20"
                            HorizontalAlignment="Center" 
                            Cursor="Hand"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <DockPanel>
                                    <Image x:Name="export_btn_img" Source="/icons/export.png" />
                                </DockPanel>
                                <TextBlock x:Name="export_btn_text" Margin="5,0,0,0" Width="105">Export spreadsheet</TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonConfirm"
                Click="ButtonConfirm_Click"
                Grid.Column="1"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                    </DockPanel>
                    <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="ButtonCancel"
                Click="ButtonCancel_Click"
                Grid.Column="2"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="cancel_btn_img" Source="/icons/cancel_icon.png" />
                    </DockPanel>
                    <TextBlock x:Name="cancel_btn_text" Margin="0,0,0,0" Width="45">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
