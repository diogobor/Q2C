<UserControl x:Class="Q2C.Viewer.Setup.UCMachine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer.Setup"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="305">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainUCMachine">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Margin="5" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="header_groupbox_img" Margin="3,0" Width="15" Source="/icons/machine.png" />
                    <TextBlock FontWeight="Bold">Parameters</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="185"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Machine name:"
                           Margin="5,8,5,5"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBox   Grid.Column="1"
                           Grid.Row="0"
                           Height="23"
                           x:Name="TextMachineName"
                           Margin="5,5,5,5"
                           ToolTip="Type a name for the machine"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type a name for the machine"
                           PreviewKeyDown="TextMachineName_PreviewKeyDown"/>
                <TextBlock Text="Mass Calibration Time:"
                           Margin="5,8,5,5"
                           Grid.Column="0"
                           Grid.Row="1"/>
                <StackPanel Grid.Row="1" Orientation="Horizontal"
                            Grid.Column="1"
                            SnapsToDevicePixels="True">
                    <xctk:IntegerUpDown
                            x:Name="UpDownCalibrationTime"
                            Margin="5"
                            MinWidth="50"
                            Height="23"
                            Minimum="1"
                            Maximum="31"
                            Value="2"
                            ToolTip="Set the frequency for calibrating the machine"/>
                    <ComboBox x:Name="ComboCalibrationTime"
                              MinWidth="80"
                              Height="23">
                        <ComboBoxItem>Day(s)</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Week(s)</ComboBoxItem>
                        <ComboBoxItem>Month(s)</ComboBoxItem>
                        <ComboBoxItem>Year(s)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
                <TextBlock Text="Full Calibration Time:"
                           Margin="5,8,5,5"
                           Grid.Column="0"
                           Grid.Row="2"/>
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            Grid.Column="1"
                            SnapsToDevicePixels="True">
                    <xctk:IntegerUpDown
                            x:Name="UpDownFullCalibrationTime"
                            Margin="5"
                            MinWidth="50"
                            Height="23"
                            Minimum="1"
                            Maximum="31"
                            Value="1"
                            ToolTip="Set the frequency for full calibrating the machine"/>
                    <ComboBox x:Name="ComboFullCalibrationTime"
                              MinWidth="80"
                              Height="23">
                        <ComboBoxItem>Day(s)</ComboBoxItem>
                        <ComboBoxItem>Week(s)</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Month(s)</ComboBoxItem>
                        <ComboBoxItem>Year(s)</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <TextBlock Text="Interval Time (min):"
                           Margin="5,8,5,5"
                           Grid.Column="0"
                           Grid.Row="3"/>
                <xctk:IntegerUpDown
                            x:Name="UpDownIntervalTime"
                            Margin="5"
                            MinWidth="50"
                            Height="23"
                            Minimum="1"
                            Maximum="600"
                            Value="20"
                            Grid.Row="3"
                            Grid.Column="1"
                            ToolTip="Set the interval time between projects."/>
                <StackPanel Grid.ColumnSpan="2" Margin="0,3,0,0" Grid.Row="4" Orientation="Horizontal">
                    <CheckBox x:Name="HasEvaluation"
                          IsChecked="True"
                          Content="Evaluation"
                          Grid.Row="8"
                          Grid.ColumnSpan="2"
                          Margin="5,5,5,5"/>
                    <CheckBox x:Name="HasFAIMS"
                          IsChecked="True"
                          Content="FAIMS"
                          Grid.Row="8"
                          Grid.ColumnSpan="2"
                          Margin="19,5,5,5"/>
                    <CheckBox x:Name="HasOT"
                          IsChecked="True"
                          Content="OT"
                          Grid.Row="8"
                          Grid.ColumnSpan="2"
                          Margin="19,5,5,5"/>
                    <CheckBox x:Name="HasIT"
                          IsChecked="True"
                          Content="IT"
                          Grid.Row="8"
                          Grid.ColumnSpan="2"
                          Margin="19,5,5,5"/>
                    
                </StackPanel>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonConfirm"
                Click="ButtonConfirm_Click"
                Grid.Column="1"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                    </DockPanel>
                    <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="ButtonCancel"
                Click="ButtonCancel_Click"
                Grid.Column="2"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="cancel_btn_img" Source="/icons/cancel_icon.png" />
                    </DockPanel>
                    <TextBlock x:Name="cancel_btn_text" Margin="5,0,0,0" Width="45">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
