<UserControl x:Class="Q2C.Viewer.Setup.UCFastaFiles"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer.Setup"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="632">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <local:FileNameConverter x:Key="FileNameConverter"/>
    </UserControl.Resources>
    <Grid x:Name="MethodGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Margin="0,0,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <TextBlock FontWeight="Bold">Parameters</TextBlock>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition MinWidth="300" Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Fasta name:"
                           Margin="5,8,5,5"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBox Grid.Column="1"
                           Grid.Row="0"
                           x:Name="TextFastaName"
                           Margin="5,5,5,5"
                           Height="23"
                           MinWidth="180"
                           ToolTip="Type a name for the database"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Type a name for the database"/>

                <TextBlock Text="File:"
                           Margin="5,8,5,5"
                           Grid.Column="2"
                           Grid.Row="0"/>
                <TextBox Grid.Column="3"
                           Grid.Row="0"
                           x:Name="TextFastaDir"
                           IsReadOnly="True"
                           Margin="5,5,5,5"
                           ToolTip="Select one fasta file"
                           Style="{StaticResource MyWaterMarkStyle}"
                           Tag="Select one fasta file"/>
                <Button x:Name="ButtonFile"
                        Click="ButtonBrowseFile_Click"
                        Grid.Column="4"
                        Margin="3" 
                        Grid.Row="0"
                        HorizontalAlignment="Right" 
                        Cursor="Hand" 
                        ToolTip="Select a Raw file. For more information, access the Read Me on Help menu.">
                            <DockPanel>
                                <Image Width="20" Source="/icons/load.png"/>
                            </DockPanel>
                </Button>

                <Button x:Name="ButtonConfirm"
                        Click="ButtonConfirm_Click"
                        Margin="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Grid.Row="2"
                        Padding="10,1,10,1" 
                        Height="20"
                        HorizontalAlignment="Left" 
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <DockPanel>
                            <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                        </DockPanel>
                        <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                    </StackPanel>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Margin="0,10,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <GroupBox.Header>
                <TextBlock FontWeight="Bold">All Fastas</TextBlock>
            </GroupBox.Header>
            <Grid>
                <DataGrid x:Name="DataGridFastas"
                                    AutoGenerateColumns="False"
                                    AlternatingRowBackground="WhiteSmoke"
                                    LoadingRow="DataGridFastas_LoadingRow"
                                    PreviewKeyDown="DataGridFastas_PreviewKeyDown"
                                    VerticalScrollBarVisibility="Visible"
                                    SelectionMode="Single"
                                    MaxHeight="185" SelectionChanged="DataGridFastas_SelectionChanged">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                        Header="Name"
                        Binding="{Binding Name}"
                        IsReadOnly="True"
                        CanUserSort="False"
                            MinWidth="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                        Header="File"
                        IsReadOnly="True"
                        CanUserSort="False"
                            MinWidth="400">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Path" Converter="{StaticResource FileNameConverter}"/>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
