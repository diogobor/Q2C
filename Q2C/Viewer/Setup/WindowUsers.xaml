<Window x:Class="Q2C.Viewer.Setup.WindowUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2C.Viewer.Setup"
        mc:Ignorable="d"
        Title="Q2C :: Users" Icon="/icons/q2c_icon.png" Height="450" Width="766" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0"
                                            Header=""
                                            Margin="5,5,5,0"
                                            Grid.ColumnSpan="3">
            <Button
                                            Click="Button_AddUser"
                                            Padding="5,1,5,1"
                                            Margin="5,5,5,5"
                                            Height="20"
                                            HorizontalAlignment="Left" 
                                            Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image Source="/icons/add_icon.png" />
                    </DockPanel>
                    <TextBlock Margin="5,0,0,0" Width="50">Add User</TextBlock>
                </StackPanel>
            </Button>
        </GroupBox>
        <GroupBox Grid.Row="1" Margin="5,5,5,25">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="header_groupbox_img" Margin="3,0" Width="15" Source="/icons/userIcon.png" />
                    <TextBlock FontWeight="Bold">Users</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <DataGrid x:Name="DataGridUsers"
                                                IsReadOnly="True"
                                                AutoGenerateColumns="False"
                                                AlternatingRowBackground="WhiteSmoke"
                                                LoadingRow="DataGridUsers_LoadingRow"
                                                PreviewKeyDown="DataGridUsers_PreviewKeyDown"
                                                MouseDoubleClick="DataGridUsers_MouseDoubleClick"
                                                VerticalScrollBarVisibility="Visible"
                                                SelectionMode="Single"
                                                SelectionUnit="FullRow"
                                                MinHeight="210">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                                            Header="Registration Date"
                                            Binding="{Binding RegistrationDateStr}"
                                            MaxWidth="155"
                                            MinWidth="150"
                                            IsReadOnly="True"
                                            CanUserSort="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                                            Header="Username"
                                            Binding="{Binding Name}"
                                            MinWidth="160"
                                            MaxWidth="160"
                                            IsReadOnly="True"
                                            CanUserSort="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                                            Header="Category"
                                            Binding="{Binding _category}"
                                            MinWidth="200"
                                            MaxWidth="200"
                                            IsReadOnly="True"
                                            CanUserSort="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                                            Header="Email"
                                            Binding="{Binding Email}"
                                            MinWidth="180"
                                            MaxWidth="180"
                                            IsReadOnly="True"
                                            CanUserSort="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
