<UserControl x:Class="Q2C.Viewer.Setup.UCUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Q2C.Viewer.Setup"
             mc:Ignorable="d" 
             d:DesignHeight="175" d:DesignWidth="290">
    <UserControl.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="MainUCRun">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox Margin="5" Grid.Row="0">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Image x:Name="header_groupbox_img" Margin="3,0" Width="15" Source="/icons/userIcon.png" />
                    <TextBlock FontWeight="Bold">Parameters</TextBlock>
                </StackPanel>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Username:"
                           Margin="5,0,5,5"
                           Grid.Column="0"
                           Grid.Row="0"/>
                <TextBlock x:Name="UserHyperLink"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="5,16,0,0"
                        FontSize="9">
                        <Hyperlink Click="HyperlinkAdvanced_Click">
                            Get local user
                        </Hyperlink>
                </TextBlock>
                <TextBox x:Name="TextUsername"
                         Grid.Row="0"
                         Grid.Column="1"
                         Margin="5" 
                         Height="23"
                         ToolTip="Type a username"
                         Style="{StaticResource MyWaterMarkStyle}"
                         Tag="Type a username"/>

                <TextBlock Grid.Column="0" 
                           Grid.Row="1" 
                           Margin="5" 
                           Text="Email:"/>
                <TextBox x:Name="TextEmail"
                         Grid.Row="1"
                         Grid.Column="1"
                         Margin="5" 
                         Height="23"
                         ToolTip="Type a valid email"
                         Style="{StaticResource MyWaterMarkStyle}"
                         Tag="Type a valid email"/>
                
                <TextBlock Grid.Column="0" 
                           Grid.Row="3" 
                           Margin="5" 
                           Text="Category:"/>
                <ComboBox Grid.Column="1"
                          Margin="5,5,5,5"
                          Grid.Row="3"
                          x:Name="ComboCategory">
                    <ComboBoxItem IsSelected="True">User</ComboBoxItem>
                    <ComboBoxItem>User Sample</ComboBoxItem>
                    <ComboBoxItem>Super User Sample</ComboBoxItem>
                    <ComboBoxItem>Super User Machine</ComboBoxItem>
                    <ComboBoxItem>Super User Sample &#38; Machine</ComboBoxItem>
                    <ComboBoxItem>Master User Sample</ComboBoxItem>
                    <ComboBoxItem>Master User Sample &#38; Machine</ComboBoxItem>
                    <ComboBoxItem>Administrator</ComboBoxItem>
                </ComboBox>

            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="28"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="28"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ButtonConfirm"
                Click="ButtonConfirm_Click"
                Grid.Column="1"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="ok_btn_img" Source="/icons/ok.png"/>
                    </DockPanel>
                    <TextBlock x:Name="ok_btn_text" Margin="5,0,0,0" Width="45">Confirm</TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="ButtonCancel"
                Click="ButtonCancel_Click"
                Grid.Column="2"
                Padding="10,1,10,1" 
                Height="20"
                HorizontalAlignment="Center" 
                Cursor="Hand">
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <Image x:Name="cancel_btn_img" Source="/icons/cancel_icon.png" />
                    </DockPanel>
                    <TextBlock x:Name="cancel_btn_text" Margin="0,0,0,0" Width="45">Cancel</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
