<Window x:Class="Q2C.Viewer.Statistics.WindowStatisticalEvaluation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2C.Viewer.Statistics"
        mc:Ignorable="d"
        Title="Q2C :: Statistics :: Machines Evaluation" Icon="/icons/q2c_icon.png" Height="500" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" Closing="Window_Closing">
    <Window.InputBindings>
        <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding CloseWindowCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding ReportCommand}"/>
        <KeyBinding Key="F1" Command="{Binding ReadMeCommand}"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Report" 
                          Click="MenuItem_Report" InputGestureText="Ctrl+P">
                    <MenuItem.Icon>
                        <Image Source="/icons/report.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Close" 
                          Click="MenuItemClose_Click" InputGestureText="Alt+F4">
                    <MenuItem.Icon>
                        <Image Source="/icons/exit.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_Read me" InputGestureText="F1"
                          Click="MenuItem_ReadMe">
                    <MenuItem.Icon>
                        <Image Source="/icons/help.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_About Q2C"
                          Click="MenuItem_About">
                    <MenuItem.Icon>
                        <Image Source="/icons/q2c_icon.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        <local:UCStatisticalEvaluation Grid.Row="1" x:Name="_MachinesEvaluation"/>
    </Grid>
</Window>
